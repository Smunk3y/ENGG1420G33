<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="userPanel" prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f4f4f4; -fx-border-color: #333; -fx-border-width: 2; -fx-border-radius: 5;">

    <!-- Use AnchorPane for Proper Layout -->
    <AnchorPane prefWidth="800" prefHeight="600">
        <!-- Centered VBox inside the panel -->
        <VBox alignment="CENTER" spacing="20" prefWidth="400" prefHeight="300"
              layoutX="200" layoutY="150"> <!-- Position in the center of the panel -->

            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@img/UOFGLogo.png" />
                </image>
            </ImageView>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome, User!" />
        </VBox>
    </AnchorPane>

</Pane>