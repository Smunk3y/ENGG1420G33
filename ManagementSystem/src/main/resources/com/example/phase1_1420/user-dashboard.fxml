<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.phase1_1420.UserDashboardController">

    <!-- Sidebar inside a Pane -->
    <Pane fx:id="sidebarPane" prefHeight="600" prefWidth="200" AnchorPane.leftAnchor="0">
        <VBox fx:id="sidebar" prefHeight="600.0" prefWidth="200" spacing="10" style="-fx-background-color: #34495e;">
            <Button onAction="#handleDashboard" text="Dashboard" />
            <Button onAction="#handleCourses" text="View Courses" />
            <Button onAction="#handleEvents" text="View Register Events" />
            <Button onAction="#handleProfile" text="Profile Management" />
            <Button onAction="#handleLogout" style="-fx-background-color: red; -fx-text-fill: white;" text="Logout" />
            <padding>
                <Insets top="100.0" />
            </padding>
        </VBox>
    </Pane>

    <!-- Main Content Area -->
    <StackPane fx:id="contentArea" layoutX="200" prefHeight="600" prefWidth="600" />

    <!-- Toggle Button -->
    <Button fx:id="toggleButton" layoutX="10" layoutY="10" onAction="#toggleSidebar" text="â˜°" AnchorPane.topAnchor="10" />
</AnchorPane>